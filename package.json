{
  "name": "codeforces-quest",
  "description": "",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode production",
    "build:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode production",
    "build:dev:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode development",
    "build:dev:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode development",
    "build:dev": "npm run build:dev:chrome && npm run build:dev:firefox",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings 10",
    "type-check": "tsc --noEmit",
    "package": "npm run build && npm run zip",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "zip:source": "bestzip extension-releases/codeforces-lite-source-v$npm_package_version.zip \"**\" \"!node_modules/**\" \"!dist/**\" \"!extension-releases/**\" \"!.git/**\"",
    "ensure-releases-dir": "node -e \"const fs=require('fs'); if(!fs.existsSync('./extension-releases')){fs.mkdirSync('./extension-releases');}\"",
    "zip:chrome": "npm run ensure-releases-dir && cd dist/chrome && bestzip ../../extension-releases/codeforces-lite-chrome-v$npm_package_version.zip *",
    "zip:firefox": "npm run ensure-releases-dir && cd dist/firefox && bestzip ../../extension-releases/codeforces-lite-firefox-v$npm_package_version.zip *"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/chrome": "^0.0.272",
    "framer-motion": "^11.11.8",
    "lucide-react": "^0.447.0",
    "monaco-editor": "^0.52.2",
    "monaco-themes": "^0.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^1.5.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.9.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/node": "^22.15.3",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.1.3",
    "@types/react-resizable": "^3.0.8",
    "@types/webextension-polyfill": "^0.12.3",
    "@types/webpack": "^5.28.5",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/ui": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "bestzip": "^2.2.1",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^15.9.0",
    "happy-dom": "^20.0.8",
    "html-webpack-plugin": "^5.6.3",
    "jsdom": "^27.0.1",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "postcss": "^8.5.3",
    "postcss-loader": "^8.1.1",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.1",
    "vitest": "^4.0.3",
    "webpack": "^5.99.6",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  }
}
