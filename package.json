{
  "name": "codeforces-quest",
  "description": "",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode production",
    "build:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode production",
    "build:dev:chrome": "cross-env TARGET_BROWSER=chrome webpack --mode development",
    "build:dev:firefox": "cross-env TARGET_BROWSER=firefox webpack --mode development",
    "build:dev": "npm run build:dev:chrome && npm run build:dev:firefox",
    "package": "npm run build && npm run zip",
    "zip": "npm run zip:chrome && npm run zip:firefox",
    "zip:chrome": "cd dist/chrome && bestzip ../../releases/codeforces-lite-chrome-v$npm_package_version.zip *",
    "zip:firefox": "cd dist/firefox && bestzip ../../releases/codeforces-lite-firefox-v$npm_package_version.zip *"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@types/chrome": "^0.0.272",
    "framer-motion": "^11.11.8",
    "lucide-react": "^0.447.0",
    "monaco-editor": "^0.52.2",
    "monaco-themes": "^0.4.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sonner": "^1.5.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.27.0",
    "@eslint/js": "^9.9.0",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/node": "^22.15.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-resizable": "^3.0.8",
    "@types/webextension-polyfill": "^0.12.3",
    "@types/webpack": "^5.28.5",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
